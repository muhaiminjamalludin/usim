<% include partials/header2.ejs %>
<div class="container">
    <% if (message) { %>
    <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <form class="add-activity-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" id="name" value="<%= activity.name %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="location">Location</label>
                <input type="text" class="form-control" name="location" id="loaction" value="<%= activity.location %>">
            </div>
            <div class="form-group col-md-4">
                <label for="organiser">Organiser</label>
                <input type="text" class="form-control" name="organiser" id="organiser"
                    value="<%= activity.organiser %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="description">Description</label>
                <input type="text" class="form-control" name="description" id="description"
                    value="<%= activity.description %>" required>
            </div>
        </div>
        Time and Date of the event (date and time): <input type="datetime-local" name="bdaytime">
        <button type="submit" class="btn btn-success float-right">Update Activity</button>
    </form>
</div>
</div>
</body>
<% include partials/footer.ejs %>